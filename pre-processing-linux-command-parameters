# trimmomatic
trimmomatic PE -phred33 -threads 16 \
"$r1" "$r2" "$OUT_DIR/${sample}_R1_trimmed.fastq" "$OUT_DIR/${sample}_R1_unpaired.fastq" \
"$OUT_DIR/${sample}_R2_trimmed.fastq" "$OUT_DIR/${sample}_R2_unpaired.fastq" \
ILLUMINACLIP:"$ADAPTER_DIR/NexteraPE-PE.fa":2:30:10 LEADING:3 TRAILING:3 SLIDINGWINDOW:4:15 MINLEN:36

# fastp
fastp --in1 "$r1" --out1 "$OUT_DIR/${sample}_R1_trimmed2.fastq" \
--in2 "$r2" --out2 "$OUT_DIR/${sample}_R2_trimmed2.fastq" --trim_poly_g 
